<%= form_for [@project, @challenge] do |f| %>
  <%= f.label :name_of_challenger, "Name" %>
  <%= f.text_field :name_of_challenger %>
  <br>
  <%= f.label :title_of_challenge, "Challenge" %>
  <%= f.text_field :title_of_challenge %>
  <br>
  <%= f.label :amount, "Amount" %>
  <%= f.text_field :amount %>
  <br>
  <%= f.label :display_media, "Photo or Video" %>
  <%= f.text_field :display_media %>

  <%= f.hidden_field :project_id, :value => @project.id  %>
 <br>
  <%= f.submit %>
<% end %>