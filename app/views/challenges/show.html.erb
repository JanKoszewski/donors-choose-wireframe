<%= flash[:notice] %>
<%= @challenge.title %>
</br>
<%= @challenge.name %>
</br>
<%= image_tag(@challenge.display_media) %>

<%= render partial: 'challenge_evidences/form' %>

</br>
<h1>Evidence So Far</h1>
<% unless @challenge_evidences.blank? %>
  <% @challenge_evidences.each do |evidence| %>
    <% if evidence.image_url %>
      <%= raise "boom" %>
      <%= image_tag(evidence.image_url) %>
    <% elsif evidence.external_url %>
      <%= image_tag(evidence.external_url) %>
    <% else %>
      <p>Photo not found</p>
    <% end %>
  <% end %>
<% end %>
