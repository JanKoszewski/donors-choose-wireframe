<div class="container">
  <div class="row project">
    <%= render partial: "project_info_bar" %>
  </div>
  <div class="row spacer"></div>

  <div class="challenges">
    <div class="row challenges-headers">
      <h1 class="sixcol">Featured Challenge</h1>
      <div id="progress-box" class="sixcol last">
        <div class="meter orange">
          <span style="width: 30%"></span>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="sixcol">
        <div class="featured-challenge">
          <div class="row any-width">
            <% @challenges.each do |challenge| %>
              <div class="challenge-details twelvecol">
                <div class="row any-width">
                  <div class="twelvecol featured-challenge-image">
                    <%= link_to(image_tag(challenge.display_media), project_challenge_path(@project, challenge))  %>
                  </div>
                </div>

                <div class="row any-width">
                  <div class="challenger twocol">
                    <div class="challenger-image">
                      <img src="https://si0.twimg.com/profile_images/1373765588/Verdi_reasonably_small.jpg">
                    </div>
                    <span class="user-name"><%= link_to challenge.name, "#" %></span>
                  </div>

                  <div class="challenge-description sixcol">
                    <div>
                      <%= challenge.name %> will <span class="challenge-action"><%= challenge.title %></span>
                      <span class="challenge-condition">when this project raises: <%= humanized_money_with_symbol challenge.target_funding %></span>
                    </div>
                    <div>
                      (Only <%= humanized_money_with_symbol challenge.amount_currency %> to go!)
                    </div>
                  </div>

                  <div class="fourcol last">
                    <div class="challenge-money">
                      <div class="challenge-progress">
                        <span class="dollars-left">$84</span>
                        <p class="to-go">To Go</p>
                      </div>
                      <div class="challenge-donate">
                        <%= link_to "Give", challenge.project.proposal_url, target: "_blank", class: "give-link" %>
                      </div>
                    </div>
                    <div>
                    <%= link_to("View Challenge", project_challenge_path(@project, challenge), class: "challenge-link")  %>
                    </div>
                  </div>
                </div>

              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="active-challenges sixcol last">
        <div class="feed-challenges">
          <% @challenges.each do |challenge| %>
            <div class="feed-challenge" id="feed-challenge-<%=challenge.id%>">
              <div class="row any-width">
                <div class="twocol">
                  <%= link_to(image_tag(challenge.display_media), project_challenge_path(@project, challenge))  %>
                </div>
                <div class="tencol last">
                  <span class="challenge-username"><%= challenge.name %></span> will: <%= challenge.title %> <span class="amount-remaining">(Only <%= humanized_money_with_symbol challenge.amount_currency %> to go!)</span>
                  <div>
                  <%= link_to("View Challenge", project_challenge_path(@project, challenge), class: "challenge-link")  %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <div class="new-challenge-link">
          Contribute to the effort: <%= link_to "Post a challenge!", new_project_challenge_path(:project_id => @project.id) %>
        </div>
      </div>
    </div>
  </div> <!-- end challenges -->
</div> <!--end container -->


